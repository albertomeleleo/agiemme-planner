# Docker Compose Environment Variables Template
# Copy this file to `.env` to customize your local development environment
# All variables have sensible defaults in docker-compose.yml - this file is OPTIONAL

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================

# PostgreSQL connection details
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_NAME=agiemme_planner_dev
DATABASE_USER=agiemme_user

# ⚠️ SECURITY WARNING: Change this password in production!
DATABASE_PASSWORD=dev_password_change_in_production

# ==============================================================================
# BACKEND API CONFIGURATION
# ==============================================================================

# Server configuration
PORT=3000
NODE_ENV=development
LOG_LEVEL=debug

# CORS configuration
FRONTEND_URL=http://localhost:5173

# ⚠️ SECURITY WARNING: Change this secret in production!
# JWT secret for authentication token signing
JWT_SECRET=dev_jwt_secret_INSECURE_change_for_production
JWT_EXPIRATION=7d

# ==============================================================================
# FRONTEND CONFIGURATION
# ==============================================================================

# API connection
VITE_API_BASE_URL=http://localhost:3000/api

# Vite HMR (Hot Module Replacement) configuration
VITE_HMR_PORT=5173
VITE_HMR_HOST=localhost

# ==============================================================================
# DEVELOPMENT PERFORMANCE
# ==============================================================================

# File watching configuration (set to 'true' only if hot-reload is not working)
# Default: false (native file watching is faster)
CHOKIDAR_USEPOLLING=false
WATCHPACK_POLLING=false

# ==============================================================================
# USAGE INSTRUCTIONS
# ==============================================================================
#
# 1. (Optional) Copy this file to create your local configuration:
#    cp .env.docker.example .env
#
# 2. Edit .env with your custom values (if needed)
#
# 3. Restart Docker Compose to apply changes:
#    docker compose down && docker compose up
#
# ==============================================================================
# SECURITY NOTES
# ==============================================================================
#
# - The default values are SAFE for local development
# - NEVER commit .env files to version control (they're in .gitignore)
# - ALWAYS change JWT_SECRET and DATABASE_PASSWORD for production deployments
# - Production secrets should be managed via environment variables or secret management systems
#
